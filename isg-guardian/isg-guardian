try:
    import yaml
except ImportError:
    print("âŒ é”™è¯¯: ç¼ºå°‘å¿…éœ€çš„PythonåŒ… 'yaml'")
    print("è¯·è¿è¡Œ: pip install PyYAML")
    sys.exit(1)
from pathlib import Path
